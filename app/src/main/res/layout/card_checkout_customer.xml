<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        app:cardUseCompatPadding="false"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_checkout_heading_customer_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/icon_checkout_customer_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="18dp"
                    android:src="@drawable/ic_refresh_black"/>

                <TextView
                    android:id="@+id/txt_layout_heading_customer_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Details"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#616161"/>

                <Button
                    android:id="@+id/btn_checkout_customer_detail_edit"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:text="Edit"
                    android:textSize="11sp"
                    android:layout_marginEnd="18dp"
                    android:textColor="@android:color/white"
                    android:layout_alignRight="@id/txt_layout_heading_customer_detail"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/holo_orange_dark"/>

                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/txt_layout_heading_customer_detail"
                    android:layout_margin="8dp"
                    android:background="#616161" />


            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/layout_checkout_detail_customer_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@id/layout_checkout_heading_customer_detail">

                <TextView
                    android:id="@+id/txt_stat_checkout_customer_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="7dp"
                    android:text="Mobile Number  :"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_checkout_customer_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_stat_checkout_customer_mobile"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="5dp"
                    android:text="7799554488"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/txt_stat_checkout_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_stat_checkout_customer_mobile"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="Customer Name  :"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_checkout_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_toRightOf="@id/txt_stat_checkout_customer_name"
                    android:layout_below="@id/txt_checkout_customer_mobile"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="Customer Real Name"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/txt_stat_checkout_customer_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_stat_checkout_customer_name"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="Address  :"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_checkout_customer_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_stat_checkout_customer_address"
                    android:layout_below="@id/txt_checkout_customer_name"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="Mysore"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/txt_stat_checkout_customer_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_stat_checkout_customer_address"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="10dp"
                    android:text="Customer Type  :"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_checkout_customer_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_stat_checkout_customer_type"
                    android:layout_below="@id/txt_checkout_customer_address"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="10dp"
                    android:text="Regular"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:inputType="number"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_checkout_button_customer_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@id/layout_checkout_heading_customer_detail">

                <Button
                    android:id="@+id/btn_checkout_add_customer"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Add Customer"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/white"
                    android:background="@android:color/holo_blue_dark"/>

            </RelativeLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>