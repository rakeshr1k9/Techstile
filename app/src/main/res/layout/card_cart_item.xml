<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:id="@+id/cart_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        app:cardUseCompatPadding="false"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="10">

            <ImageView
                android:id="@+id/icon_cart_item_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxWidth="60dp"
                android:maxHeight="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:padding="4dp"
                android:adjustViewBounds="true"
                android:textAlignment="textStart"
                app:srcCompat="@drawable/a101shirt"/>

            <TextView
                android:id="@+id/txt_item_type_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingStart="4dp"
                android:text="Window Curtain (With Liner)"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_item_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="D\nd/r\nT\nc/r\nDye\nS"
                android:lineSpacingExtra="1dp"
                android:textColor="@android:color/darker_gray"
                android:textAlignment="textStart"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/cart_item_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textAlignment="textStart"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_cart_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:paddingBottom="2dp"
                    android:text="20"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_cart_item_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:paddingTop="2dp"
                    android:text="7955/-"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img_btn_cart_item_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="16dp"
                android:textAlignment="textStart"
                android:src="@drawable/ic_close_black"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>